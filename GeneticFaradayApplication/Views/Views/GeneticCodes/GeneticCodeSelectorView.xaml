<Window x:Class="GeneticFaradayApplication.Views.Views.GeneticCodes.GeneticCodeSelectorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GeneticCodeSelector" Height="152" Width="226">
    <Grid>
        <ComboBox Name="genetic_code_combo_box" Margin="10,41,9,0" VerticalAlignment="Top"/>
        <Label Content="Please Select a Genetic Code:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.158,-0.423">
            <Label.Effect>
                <DropShadowEffect BlurRadius="7" Opacity="0.9"/>
            </Label.Effect>
        </Label>
        <Button Content="OK" Name="okay_button" HorizontalAlignment="Left" Margin="133,90,0,0" VerticalAlignment="Top" Width="75" Click="okay_button_Click"/>

    </Grid>
</Window>
